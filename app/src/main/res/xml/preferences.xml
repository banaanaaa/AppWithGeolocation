<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <SeekBarPreference
        app:defaultValue="5"
        app:iconSpaceReserved="false"
        app:min="1"
        android:max="30"
        app:key="com.appwithgeolocation.settings.SAMPLE_RATE"
        app:showSeekBarValue="true"
        app:title="@string/title_sample_rate"
        app:summary="@string/summary_sample" />

    <SeekBarPreference
        app:defaultValue="100"
        app:iconSpaceReserved="false"
        app:min="10"
        android:max="500"
        app:key="com.appwithgeolocation.settings.ACCURACY"
        app:showSeekBarValue="true"
        app:title="@string/title_accuracy"
        app:summary="@string/summary_accuracy" />

    <SwitchPreference
        app:defaultValue="false"
        app:iconSpaceReserved="false"
        app:key="com.appwithgeolocation.settings.SERVICE_SWITCH"
        app:title="@string/title_service_switch"
        app:summaryOff="@string/summary_service_switchOn"
        app:summaryOn="@string/summary_service_switchOff" />

</PreferenceScreen>
