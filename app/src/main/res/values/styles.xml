<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:singleLine">true</item>
        <item name="boxCornerRadiusBottomStart">@dimen/round_size_medium</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/round_size_medium</item>
        <item name="boxCornerRadiusTopStart">@dimen/round_size_medium</item>
        <item name="boxCornerRadiusTopEnd">@dimen/round_size_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
        <item name="errorEnabled">true</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">25</item>
    </style>

    <style name="TextViewStyle">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:layout_marginTop">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_small</item>
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
    </style>

    <style name="TextViewStylePointItem">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">@dimen/spacing_xsmall</item>
        <item name="android:layout_marginBottom">@dimen/spacing_xsmall</item>
        <item name="android:layout_marginStart">@dimen/spacing_small</item>
        <item name="android:layout_marginEnd">@dimen/spacing_small</item>
    </style>

    <style name="ButtonStylePointItem">
        <item name="android:layout_width">@dimen/size_xlarge</item>
        <item name="android:layout_height">@dimen/size_xlarge</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:layout_margin">@dimen/spacing_small</item>
    </style>

</resources>